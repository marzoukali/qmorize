{
    "manifest_version": 2,
    "name": "qmorize",
    "description": "Memorize words and learn languages more smarter and faster!",
    "version": "1.0",
    "author": "Ahmed Marzouk",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "options_page": "options.html",
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
              "16": "images/logo-16.png",
              "32":  "images/logo-32.png",
              "48":  "images/logo-64.png",
              "128":  "images/logo-128.png"
            },
            "default_title": "Memorize words and learn languages more smarter and faster!"
      
    },
    "icons": {
      "16": "images/logo-16.png",
      "32":  "images/logo-32.png",
      "48":  "images/logo-64.png",
      "128":  "images/logo-128.png"
    },
    "permissions": ["activeTab", "declarativeContent", "storage"]
   }